import random

def greet_player():
    print("ğŸ¯ Ğ’Ğ³Ğ°Ğ´Ğ°Ğ¹ Ñ‡Ğ¸ÑĞ»Ğ¾ Ğ²Ñ–Ğ´ 1 Ğ´Ğ¾ 100!")
    print("ğŸ” Ğ£ Ñ‚ĞµĞ±Ğµ Ñ” 7 ÑĞ¿Ñ€Ğ¾Ğ±. Ğ£Ğ´Ğ°Ñ‡Ñ–!\n")

def get_user_guess(attempt):
    while True:
        try:
            guess = int(input(f"Ğ¡Ğ¿Ñ€Ğ¾Ğ±Ğ° {attempt}: Ğ’Ğ²ĞµĞ´Ğ¸ Ñ‡Ğ¸ÑĞ»Ğ¾: 7"))
            if 1 <= guess <= 100:
                return guess
            else:
                print("âŒ Ğ§Ğ¸ÑĞ»Ğ¾ Ğ¼Ğ°Ñ” Ğ±ÑƒÑ‚Ğ¸ Ğ²Ñ–Ğ´ 1 Ğ´Ğ¾ 100.")
        except ValueError:
            print("âš ï¸ Ğ’Ğ²ĞµĞ´Ğ¸ Ñ†Ñ–Ğ»Ğµ Ñ‡Ğ¸ÑĞ»Ğ¾.")

def give_feedback(guess, target):
    if guess < target:
        print("ğŸ“‰ Ğ—Ğ°Ğ½Ğ°Ğ´Ñ‚Ğ¾ Ğ¼Ğ°Ğ»ĞµĞ½ÑŒĞºĞµ.")
    elif guess > target:
        print("ğŸ“ˆ Ğ—Ğ°Ğ½Ğ°Ğ´Ñ‚Ğ¾ Ğ²ĞµĞ»Ğ¸ĞºĞµ.")
    else:
        print("ğŸ‰ Ğ’Ñ–Ñ‚Ğ°Ñ! Ğ¢Ğ¸ Ğ²Ğ³Ğ°Ğ´Ğ°Ğ² Ñ‡Ğ¸ÑĞ»Ğ¾!")

def main():
    target_number = random.randint(1, 100)
    max_attempts = 7
    greet_player()

    for attempt in range(1, max_attempts + 1):
        guess = get_user_guess(attempt)
        if guess == target_number:
            give_feedback(guess, target_number)
            break
        else:
            give_feedback(guess, target_number)
    else:
        print(f"\nğŸ’€ Ğ’ÑÑ– ÑĞ¿Ñ€Ğ¾Ğ±Ğ¸ Ğ²Ğ¸Ñ‡ĞµÑ€Ğ¿Ğ°Ğ½Ñ–. Ğ—Ğ°Ğ³Ğ°Ğ´Ğ°Ğ½Ğµ Ñ‡Ğ¸ÑĞ»Ğ¾ Ğ±ÑƒĞ»Ğ¾: {target_number}")

if __name__ == "__main__":
    main()
